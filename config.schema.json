{
  "pluginAlias": "LaMarzocco",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "La Marzocco"
      },
      "serial": {
        "title": "Machine Serial Number",
        "type": "string"
      },
      "username": {
        "title": "LM Cloud Username",
        "type": "string"
      },
      "password": {
        "title": "LM Cloud Password",
        "type": "string",
        "format": "password"
      },
      "pollIntervalSeconds": {
        "title": "Polling Interval (seconds)",
        "type": "integer",
        "default": 30,
        "minimum": 0
      }
    },
    "required": [
      "serial",
      "username",
      "password"
    ]
  }
}
